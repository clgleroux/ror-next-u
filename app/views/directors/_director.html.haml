%div{:id => "#{dom_id director}"}
  %p.my-5
    %strong.block.font-medium.mb-1 Firstname:
    = director.firstName
  %p.my-5
    %strong.block.font-medium.mb-1 Lastname:
    = director.lastName
  %p.my-5
    %strong.block.font-medium.mb-1 Store:
    = director.store_id
  - if action_name != "show"
    = link_to "Show this director", director, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium"
    = link_to "Edit this director", edit_director_path(director), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium"
    %hr.mt-6/
