= form_for @store do |f|
  - if @store.errors.any?
    #error_explanation
      %h2= "#{pluralize(@store.errors.count, "error")} prohibited this store from being saved:"
      %ul
        - @store.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :city
    = f.text_field :city

  = f.select :beer_ids, options_from_collection_for_select(Beer.all, "id", "name"), {:include_blank => false}, multiple: true, prompt: "Select beer"

  .actions
    = f.submit 'Save'
