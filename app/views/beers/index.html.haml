.w-full
  - if notice.present?
    %p#notice.py-2.px-3.bg-green-50.mb-5.text-green-500.font-medium.rounded-lg.inline-block= notice
  .flex.justify-between.items-center
    %h1.font-bold.text-4xl beers
    = link_to "New beer", new_beer_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium"
  #beers.min-w-full
    = render @beers
