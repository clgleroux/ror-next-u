.mx-auto.w-full.flex{:class => "md:w-2/3"}
  .mx-auto
    - if notice.present?
      %p#notice.py-2.px-3.bg-green-50.mb-5.text-green-500.font-medium.rounded-lg.inline-block= notice
    = render @beer
    = link_to I18n.t('beers.edit'), edit_beer_path(@beer), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium"
    .inline-block.ml-2
      = button_to I18n.t('beers.destroy'), beer_path(@beer), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium"
    = link_to I18n.t('beers.back'), beers_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium"
