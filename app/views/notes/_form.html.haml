= form_for @note do |f|
  - if @note.errors.any?
    #error_explanation
      %h2= "#{pluralize(@note.errors.count, "error")} prohibited this note from being saved:"
      %ul
        - @note.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :value
    = f.number_field :value
  .field
    = f.select :beer_id, options_from_collection_for_select(Beer.all, "id", "name"), prompt: "Select beer"
  
  .actions
    = f.submit 'Save'
